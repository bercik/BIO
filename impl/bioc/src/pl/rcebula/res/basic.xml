    <!-- przypisywanie zmiennych, zwracanie z funkcji, sprawdzenie czy zmienna jest lokalna czy globalna -->
    <!-- pobranie globalnej zmiennej -->
    <function>
        <name>
            ASSIGN_LOCAL
        </name>
        <params>
            <param>
                id
            </param>
            <param>
                all
            </param>
            <param repeat="true">
                id
            </param>
            <param repeat="true">
                all
            </param>
        </params>
    </function>
    
    <function>
        <name>
            ASSIGN_GLOBAL
        </name>
        <params>
            <param>
                id
            </param>
            <param>
                all
            </param>
            <param repeat="true">
                id
            </param>
            <param repeat="true">
                all
            </param>
        </params>
    </function>
    
    <function>
        <name>
            IS_LOCAL
        </name>
        <params>
            <param>
                id
            </param>
        </params>
    </function>
    
    <function>
        <name>
            GET_LOCAL
        </name>
        <params>
            <param>
                id
            </param>
        </params>
    </function>
    
    <function>
        <name>
            IS_GLOBAL
        </name>
        <params>
            <param>
                id
            </param>
        </params>
    </function>
    
    <function>
        <name>
            GET_GLOBAL
        </name>
        <params>
            <param>
                id
            </param>
        </params>
    </function>
    
    <function>
        <name>
            RETURN
        </name>
        <params>
            <param>
                all
            </param>
        </params>
    </function>
    
    <event>
        <name>
            onUNHANDLED_ERROR
        </name>
        <params>
            <param>
                all
            </param>
        </params>
    </event>
</functions>